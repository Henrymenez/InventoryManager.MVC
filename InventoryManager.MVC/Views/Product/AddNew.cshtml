@using InventoryManager.DAL.Enums;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add Product";
}

@model InventoryManager.BLL.Models.ProductViewModel;

<h2>New Product</h2>


<form class="col-7" asp-controller="Product" asp-action="Add">

    @if (@ViewBag.ErrMsg != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.ErrMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


    <div class="alert-danger" asp-validation-summary="@ValidationSummary.All"></div>


    <div class="mb-3">
        <label asp-for="@Model.UserId" class="form-label"></label>
        <input class="form-control" asp-for="@Model.UserId">
        <span asp-validation-for="UserId"></span>
    </div>


    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Name">
        <span asp-validation-for="Name"></span>
    </div>


    <div class="mb-3">
        <label asp-for="@Model.Price" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Price">
        <span asp-validation-for="Price" class="alert-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label"></label>
        <textarea class="form-control" asp-for="@Model.Description"></textarea>
        <span asp-validation-for="Description" class="alert-danger"></span>
    </div>

    <div class="mb-3">

        <label asp-for="@Model.Category" class="form-label"></label>
        <select class="form-select" aria-label="Default select example" asp-for="@Model.Category" asp-items="Html.GetEnumSelectList <Category>()">
            <option selected="" value="">Pick a Category</option>
             <span asp-validation-for="Category" class="alert-danger"></span>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Quantity" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Quantity">
        <span asp-validation-for="Quantity" class="alert-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.BrandName" class="form-label"></label>
        <input class="form-control" asp-for="@Model.BrandName">
        <span asp-validation-for="BrandName" class="alert-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
    {
    @{
        Html.RenderPartial("_ValidationScriptsPartial");
    }
    ;
}

